{
  "compilerOptions": {
      "baseUrl": "./",
      "experimentalDecorators": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "paths": {
          "@apestaartje/*": [
              "./src/apestaartje/*"
          ],
          "@nervous-matrix/*": [
              "./src/nervous-matrix/*"
          ]
      },
      "removeComments": true,
      "sourceMap": true,
      "strictBindCallApply": true,
      "strictNullChecks": true,
      "target": "es6"
  },
  "include": [
      "src/**/*.ts"
  ]
}
