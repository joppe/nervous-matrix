{
    "compilerOptions": {
        "baseUrl": "./",
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "paths": {
            "@apestaartje/animation": [
                "./src/lib/animation"
            ],
            "@apestaartje/physics": [
                "./src/lib/physics"
            ],
            "app/*": [
                "./src/*"
            ]
        },
        "removeComments": true,
        "sourceMap": true,
        "target": "es6"
    },
    "include": [
        "src/**/*.ts"
    ]
}
